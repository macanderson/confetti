[project]
name = "confetti"
version = "0.1.0"
description = "Compose configuration from multiple sources into unified, environment-aware config objects with provenance and save semantics."
authors = [
  { name = "Mac Anderson", email = "mac@macanderson.com", url = "https://macanderson.com" }
]
readme = "README.md"
requires-python = ">=3.10,<4.0"
license = { file = "LICENSE" }
dependencies = [
  "pyyaml>=6.0.1",
  "redis>=5.0.0",
  "typer>=0.12.0",
  "httpx>=0.27.0",
  "pytest>=8.4.1",
]
classifiers = [
  "Development Status :: 3 - Alpha",
  "Intended Audience :: Developers",
  "Intended Audience :: Information Technology",
  "Intended Audience :: System Administrators",
  "License :: OSI Approved :: MIT License",
  "Operating System :: OS Independent",
  "Programming Language :: Python",
  "Programming Language :: Python :: 3",
  "Programming Language :: Python :: 3.10",
  "Programming Language :: Python :: 3.11",
  "Programming Language :: Python :: 3.12",
  "Topic :: Software Development :: Libraries",
  "Topic :: Software Development :: Build Tools",
  "Topic :: Utilities",
  "Environment :: Console",
  "Typing :: Typed",
]

[project.urls]
Homepage = "https://macanderson.com/confetti"
Repository = "https://github.com/macanderson/confetti"
Documentation = "https://confetti-docs.macanderson.com"
Issues = "https://github.com/macanderson/confetti/issues"

[project.scripts]
confetti = "confetti.cli.__main__:app"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/confetti"]
